<h1>Bands</h1>
<h2><%= link_to 'About', about_path%>    <%= link_to 'Homepage', root_path%>    <%= link_to 'Bands', bands_path%></h2>

<table>
  <thead>
  <tr>
    <th>Band</th>
    <th>Upcoming Events</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bands.each do |band| %>
    <tr>
      <td><%= link_to band.name, bands_path + "/#{band.id}" %></td>
      <td><%= band.event_count %></td>
    </tr>
  <% end %>
  </tbody>
</table>